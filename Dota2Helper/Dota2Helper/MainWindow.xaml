            </Grid.ToolTip>
        </Grid>
        <StackPanel Margin="285,650,0,0" HorizontalAlignment="Left" Width="210" Height="280" VerticalAlignment="Top">
            <TextBlock x:Name="TalentR4Block" Height="70" Text="Талант 1" Foreground="#FFC9C9C9" TextWrapping="Wrap" TextAlignment="Center" FontSize="16"/>
            <TextBlock x:Name="TalentR3Block" Height="70" Text="Талант 1" Foreground="#FFC9C9C9" TextWrapping="Wrap" TextAlignment="Center" FontSize="16"/>
            <TextBlock x:Name="TalentR2Block" Height="70" Text="Талант 1" Foreground="#FFC9C9C9" TextWrapping="Wrap" TextAlignment="Center" FontSize="16"/>
            <TextBlock x:Name="TalentR1Block" Height="70" Text="Талант 1" Foreground="#FFC9C9C9" TextWrapping="Wrap" TextAlignment="Center" FontSize="16"/>
